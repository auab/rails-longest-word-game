<div class='container'>
  <h1>New Game</h1>
  <div class='box-letters'>
      <% @letters.each do |letter| %>
      <p class ='box-letter'><%= letter.capitalize %></p>
      <% end %>
  </div>

  <p>What is the longest word you can find?</p>

  <div>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class='input-group'>
      <input type="text" class="form-control" name='word' >
      <button class="btn btn-outline-secondary" type="submit">Play</button>
    </div>
  </form>
  </div>

</div>
